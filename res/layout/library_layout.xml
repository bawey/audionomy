<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ViewContainer"
    android:orientation="vertical" >

    <!-- header -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.85"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/showArtists"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:onClick="onCategorySwitched"
                android:text="Artists" />

            <RadioButton
                android:id="@+id/showAlbums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCategorySwitched"
                android:text="Albums" />

            <RadioButton
                android:id="@+id/showSongs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCategorySwitched"
                android:text="Songs" />
        </RadioGroup>
    </LinearLayout>

    <com.github.bawey.melotonine.customGui.SwipeableListView
        android:id="@+id/libraryMatches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:orientation="horizontal" >
    </com.github.bawey.melotonine.customGui.SwipeableListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/filterKey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/title_background"
            android:ems="10"
            android:imeOptions="actionSearch"
            android:textColor="@color/title_text" >
        </EditText>
    </LinearLayout>

</LinearLayout>